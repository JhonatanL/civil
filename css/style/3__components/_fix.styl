.fix
	position relative
	padding 0 20px
	color #fff
	&__title
		z-index 9
		color var(--c-white)
		font-size 40px
		margin-bottom 40px
		@media screen and (max-width 768px)
			font-size 30px
	&__text
		z-index 99
		color var(--c-white)
		font-size 20px
		@media screen and (max-width 768px)
			font-size 16px
	.text
		.card__title
			color #fff
		.card__text
			color #d5d7d8