.social
	display flex
	height 100%
	align-items center
	width 90px
	justify-content space-around
	&__item
		color #fff
		font-size 16px
		transition color .3s
		display flex
		align-items center
		&:hover
			color var(--c-primary)
		span
			font-size 24px
			margin-right 5px
	@media screen and (max-width 768px)
		width 100%
		padding 10px 0
		
.social
	&-container
		display flex
		width 100%
		flex-wrap wrap
		text-align center
		justify-content center
	&-icon
		color var(--c-white)
		border-radius 50%
		font-size 25px
		width 80px
		height 80px
		border 2px solid var(--c-white)
		background-color transparent
		margin 20px 15px
		display inline-flex
		align-items center
		justify-content center
		transition all .3s
		&:hover
			background-color var(--c-primary)
			transform scale(1.3)
			display inline-flex
			align-items center
	&-name
		width 100%
		color #fff
		font-size 14px