.card
	padding 10px 20px
	&__number
		// background-color var(--c-primary)
		// padding 10px
		border-radius 50%
		width 30px
		height 30px
		display flex
		align-items center
		justify-content center
		color var(--c-white)
		background-color var(--c-primary)
		font-size 24px
		padding 24px
		border 2px solid var(--c-primary)
		&:hover
			color var(--c-primary)
			background-color #fff
	&__title
		// letter-spacing 1px
		padding 20px 0
		font-size 32px
		color #212529
		font-weight bold
		border-bottom 1px solid var(--c-primary)
		.color
			color var(--c-primary)
	&__price
		font-size 30px
		margin 5px 0 20px 0
		color var(--c-text)
		&:before
			content 'S/'
			margin-right 5px
	&__text
		// letter-spacing 1px
		font-size 16px
		text-align justify
	&__button
		background-color var(--c-primary)
		color var(--c-white)
		padding 15px 20px
		display inline-block
		width auto
		text-align center
		border-radius 50px
		letter-spacing 2px
		margin-bottom 16px
		border 2px solid var(--c-primary)
		transition all .3s
		&:hover
			text-decoration none
			background-color var(--c-white)
			color var(--c-primary)
			border 2px solid var(--c-primary)
	&__icon
		color var(--c-white)
		font-size 40px
		background-color var(--c-primary)
		width 100px
		height 100px
		border-radius 50%
		display flex
		justify-content center
		align-items center
		margin auto
		margin-bottom 30px
	&.price
		border 1px solid #ccc
		border-radius 10px
		text-align center
		padding 40px 20px
		background-color #fff
		.card__text
			text-align center
	&.imagen
		text-align center
		background-color rgba(#fff)
		display block
		transition all .5s
		padding 0
		border-radius 10px 10px 20px 20px
		border 1px solid #ccc
		overflow hidden
		// box-shadow 1px 1px 10px #222
		box-shadow 0px 2px 6px #bbb
		border 1px solid #bbb
		.card__title
			color rgba(#000,.9)
			font-size 20px
			background-color #fff
			width 100%
			border none
			padding 15px
			border-radius 0 0 20px 20px
			font-weight 400
		.card__img
			padding 8px
			background-color #222
			
			// color #fff
			img
				box-shadow 1px 1px 1px #222,-1px -1px 1px #222
				border-radius 5px
		&:hover
			transform translateY(-15px)
			box-shadow 0px 10px 10px #aaa
			
	&.text
		.card__title
			font-size 16px
			text-transform capitalize