.container
	display flex
	flex-wrap wrap
	max-width 1200px
	margin auto
	.item
		width 100%
		padding 10px
		@media screen and (max-width 767px)
			&.s-1-2
				width calc(100% / 2)
			&.s-1-3
				width calc(100% / 3)
			&.s-1-4
				width calc(100% / 4)
			&.s-1-5
				width calc(100% / 5)
			&.s-1-6
				width calc(100% / 6)
		@media screen and (min-width 768px)
			&.m-1-2
				width calc(100% / 2)
			&.m-1-3
				width calc(100% / 3)
			&.m-1-4
				width calc(100% / 4)
			&.m-1-5
				width calc(100% / 5)
			&.m-1-6
				width calc(100% / 6)
		@media screen and (min-width 1024px)
			&.l-1-2
				width calc(100% / 2)
			&.l-1-3
				width calc(100% / 3)
			&.l-1-4
				width calc(100% / 4)
			&.l-1-5
				width calc(100% / 5)
			&.l-1-6
				width calc(100% / 6)